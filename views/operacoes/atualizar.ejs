                                                <input type="text" value="<%= select[0]['nome'] %>" class="form-control" name="nome">
                                            </div>

                                            <div class="col-4">
                                                <label for="salario">Salário</label>
                                                <input type="number" value="<%= select[0]['salario'] %>" class="form-control" step="0.01" placeholder="Casas decimais com vírgula" name="salario">
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col">
                                                <label for="email">Email</label>
                                                <input type="email" value="<%= select[0]['email'] %>" class="form-control" name="email">
                                            </div>

                                            <div class="col">
