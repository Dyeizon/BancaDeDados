                                                <input type="password" class="form-control" name="senha">
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary submitOperacao">Atualizar</button>
                                  </form>
                            </div>
                          </div>  
                    <% } else if (tabela == 'vendedor') {%>
