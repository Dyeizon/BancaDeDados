<%- include ('./partials/head.ejs') %>


    <body>
        <%- include ('./partials/navbar.ejs') %>
        
        <div class="container">
            <a href="/"><button type="button" class="voltar btn btn-success">Voltar para o início</button></a>
                    <section class="operacoesSQL">
                        <div class="text-center">
                            <div class="row align-items-start">
                                <div class="col">
                                    <a href="/clientes/cadastrar">
                                        <button type="button" class="opcaoSQL btn btn-success">Cadastrar um cliente</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </section>

                    <section class="tabela">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Nome</th>
                                    <th scope="col">Telefone</th>
                                    <th scope="col">CPF</th>
                                    <th scope="col">Operação</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% select.forEach(element => { %>
                                    <tr>
                                        <th scope="row">
                                            <%= element['idcliente'] %>
                                        </th>
                                        <td><%= element['nome'] %></td>
                                        <td><%= element['telefone'] %></td>
                                        <td><%= element['cpf'] %></td>
                                        <td>
                                            <form class="formOperacao" action="/clientes/atualizar/<%= element['idcliente'] %>" method="get">
                                                <button type="submit" class="btn btn-warning">Atualizar</button>
                                            </form>

                                            <form class="formOperacao" action="/clientes/remover/<%= element['idcliente'] %>" method="get">
                                                <button type="submit" class="btn btn-danger">Remover</button>
                                            </form>
                                        </td>
                                    </tr>

                                <% }); %>
                                
                            </tbody>
                        </table>
                    </section>
            </div>
    </body>

    <%- include ('./partials/foot.ejs') %>